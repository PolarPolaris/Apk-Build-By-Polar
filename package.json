{
  "name": "universal-apk-builder",
  "version": "1.0.0",
  "description": "Motor de build universal para gerar APKs a partir de projetos Web, NDK, MAUI, React Native e Unity",
  "main": "out/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "pack": "electron-vite build && electron-builder",
    "pack:win": "electron-vite build && npx --node-options=--max-old-space-size=8192 electron-builder --win --config.directories.output=release/windows",
    "pack:fast": "electron-vite build && npx --node-options=--max-old-space-size=8192 electron-builder --dir",
    "pack:linux": "electron-vite build && electron-builder --linux --dir --config.directories.output=release/linux",
    "preview": "electron-vite preview",
    "start": "electron .",
    "cli": "npx tsx src/cli/index.ts",
    "setup-sdks": "npx tsx scripts/download-sdks.ts",
    "test": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts"
  },
  "keywords": [
    "apk",
    "android",
    "builder",
    "electron",
    "webview",
    "ndk",
    "maui",
    "react-native",
    "unity"
  ],
  "author": "Matheus",
  "license": "MIT",
  "build": {
    "appId": "com.universalapkbuilder.app",
    "productName": "Universal APK Builder",
    "directories": {
      "output": "release"
    },
    "icon": "build/icon.png",
    "compression": "normal",
    "files": [
      "out/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "bundled",
        "to": "bundled",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "templates",
        "to": "templates",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "signDlls": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "archiver": "^6.0.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "glob": "^10.3.0",
    "ora": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.0",
    "winston": "^3.11.0"
  }
}